#!/bin/bash

red='\033[0;31m'
reset='\033[0m'

printf "${red}"
cat <<'EOF'
   _____ __  __ _______ _____    _______                   
  / ____|  \/  |__   __|  __ \  |__   __|                  
 | (___ | \  / |  | |  | |  | |    | | ___  __ _ _ __ ___  
  \___ \| |\/| |  | |  | |  | |    | |/ _ \/ _` | '_ ` _ \ 
  ____) | |  | |  | |  | |__| |    | |  __/ (_| | | | | | |
 |_____/|_|  |_|  |_|  |_____/     |_|\___|\__,_|_| |_| |_|
EOF
printf "${reset}\n"
