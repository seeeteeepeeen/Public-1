#!/bin/bash

red='\033[0;31m'
reset='\033[0m'

printf "${red}"
cat <<'EOF'
  _____ __  __ ______ ______     _______ ______          __  __ 
 / ____|  \/  |  ____|  _ \ \   / / ____|  ____|   /\   |  \/  |
| (___ | \  / | |__  | |_) \ \_/ / (___ | |__     /  \  | \  / |
 \___ \| |\/| |  __| |  _ < \   / \___ \|  __|   / /\ \ | |\/| |
 ____) | |  | | |____| |_) | | |  ____) | |____ / ____ \| |  | |
|_____/|_|  |_|______|____/  |_| |_____/|______/_/    \_\_|  |_|
EOF
printf "${reset}\n"
